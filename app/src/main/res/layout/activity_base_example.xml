<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PassingData.PassingData_example">

    <Button
        android:id="@+id/btn_intent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Intent data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bundle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bundle Data"
        app:layout_constraintEnd_toEndOf="@+id/btn_intent"
        app:layout_constraintStart_toStartOf="@+id/btn_intent"
        app:layout_constraintTop_toBottomOf="@+id/btn_intent" />

    <Button
        android:id="@+id/btn_parcelable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Parcelable"
        app:layout_constraintEnd_toEndOf="@+id/btn_bundle"
        app:layout_constraintStart_toStartOf="@+id/btn_bundle"
        app:layout_constraintTop_toBottomOf="@+id/btn_bundle" />

</androidx.constraintlayout.widget.ConstraintLayout>